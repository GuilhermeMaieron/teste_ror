= form_for @post do |p|
  .p
    = p.label :Titulo
    = p.text_field :titulo

  .p
    = p.label :foto
    = p.file_field :foto

  .p
    =p.label :autores
    .br
    =p.select :user_ids, User.all.pluck(:email, :id),{},{multiple: true}

  .p
    = p.fields_for :tags do |tag_attributes|
      =tag_attributes.label :classificacao
      =tag_attributes.text_field :nome

  .p
    = p.submit
